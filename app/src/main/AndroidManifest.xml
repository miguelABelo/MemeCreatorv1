<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mibelo.memecreatorv1">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateMeme"
            android:label="@string/title_activity_create_meme"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SetTextMeme"
            android:label="@string/title_activity_set_text_meme"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FirstPreview"
            android:label="@string/title_activity_first_preview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinalPreview"
            android:label="@string/title_activity_final_preview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowImages"
            android:label="@string/title_activity_show_images"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowSingleImage"
            android:label="@string/title_activity_show_single_image"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowDownloads"
            android:label="@string/title_activity_show_downloads"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ShowSingleDownload"
            android:label="@string/title_activity_show_single_download"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>
